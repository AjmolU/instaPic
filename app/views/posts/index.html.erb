<div class="columns is-multiline is-gapless">
  <% @posts.each do |post| %>
    <div class="column is-one-quarter">
      <% if post.image.url %>
        <div class="image is-4by3">
          <%= link_to image_tag(post.image.url), post %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<br>

<%= link_to 'New Post', new_post_path %>
